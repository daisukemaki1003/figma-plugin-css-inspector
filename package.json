{
  "name": "figma-css-inspector",
  "version": "1.0.0",
  "description": "Figma plugin to extract and categorize CSS properties from selected nodes",
  "scripts": {
    "build": "npm run build:code && npm run build:ui",
    "build:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2020",
    "build:ui": "esbuild src/ui/index.tsx --bundle --outfile=dist/ui.js --target=es2020 --loader:.tsx=tsx --loader:.ts=ts && node scripts/build-html.js",
    "watch": "concurrently \"npm run watch:code\" \"npm run watch:ui\"",
    "watch:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2020 --watch",
    "watch:ui": "esbuild src/ui/index.tsx --bundle --outfile=dist/ui.js --target=es2020 --loader:.tsx=tsx --loader:.ts=ts --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^9.1.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  }
}
